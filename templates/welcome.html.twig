<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CRUC : Centre de Relation des Usagers-Clients{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

	<body>
        <!-- START NAVBAR -->
        <nav id="navbar" class="navbar navbar-expand-lg nav-light fixed-top sticky">
            <div class="container">
                <a class="navbar-brand" href="">
                    <span class="logo-light-mode">
                        <img src="{{ asset('images/logo-cruc.png') }}" class="l-light" alt="">
                        <img src="{{ asset('images/logo-dark.png') }}" class="l-dark" alt="">
                    </span>
                    <img src="{{ asset('./images/logo-cruc.png') }}" class="logo-dark-mode" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i data-feather="menu"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0" id="navbar-navlist">
                       
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#contactform">Nous contacter</a>
                        </li>
                    </ul>

                    <ul class="list-inline menu-social mb-0 ps-lg-4 ms-2">
                        <li class="list-inline-item"><a href="" class="btn btn-primary">Connexion</a></li>
                    </ul>
                </div>
                <!--end collapse-->
            </div>
            <!--end container-->
        </nav>
        <!-- END NAVBAR -->

        <!-- Start -->
        <section class="bg-home d-flex align-items-center" data-jarallax='{"speed": 0.5}' style="background: url('{{ asset('images/5.jpg') }}');">
            <div class="bg-overlay bg-linear-gradient-3"></div>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="title-heading">
                            <h1 class="heading text-white title-dark mb-4">BIENVENUE AU CENTRE <br>DES RELATIONS <br>DES USAGERS-CLIENTS</h1>
                            <p class="para-desc text-white-50">Un point de contact privilégié avec les usagers-clients<br> du Ministère de la Fonction Publique</p>
                            <div class="mt-4 pt-2">
                                <a href="#" class="btn btn-primary m-1">Créer un compte</a>
                                <a href="#" class="btn btn-primary m-1">Connexion</a>                                 
                            </div>
                        </div>
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end container-->
        </section><!--end section-->
        <!-- End -->
    </body>
</html>